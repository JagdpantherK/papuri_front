.clickable
  cursor pointer
.right
  float right
div
  word-break: break-all;
.page-wrapper
  width 100%
  height 100vh
  overflow-x auto
  .container
    max-width 1200px
    margin 0 auto
    padding 60px 10px
.card
  position relative
  display flex
  box-shadow 2px 2px 10px $light_shadow_color
  border-radius 5px
  .card-body
    margin 10px
    flex-grow 1
.list
  list-style none
  padding 0
.center
  text-align center
.self-center
  margin-left auto
  margin-right auto
.title
  font-size 20px
  font-weight 500
.d-flex
  display flex !important
hr
  color $lines_color

.tabs
  overflow-x auto
  padding 7px
  &::-webkit-scrollbar
    height 8px
  &::-webkit-scrollbar-track
    background transparent
  &::-webkit-scrollbar-thumb
    border-radius 3px
    margin 3px
    background $lines_color
  .tab-item
    border-radius 3px
    padding 5px
    margin 3px
    color $text_color
    text-decoration none
    transition .3s
    &:hover
      background $light_shadow_color
    &.active
      background $light_shadow_color
.absolute
  position absolute !important
.no-link
  color $text_color !important
  text-decoration none
